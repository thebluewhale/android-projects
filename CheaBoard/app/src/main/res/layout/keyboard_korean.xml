            android:id="@+id/key_pos_1_4"
            style="@style/SoftKey" />
        <TextView
            android:id="@+id/key_pos_1_5"
            style="@style/SoftKey" />
        <TextView
            android:id="@+id/key_pos_1_6"
            style="@style/SoftKey" />
        <TextView
            android:id="@+id/key_pos_1_7"
            style="@style/SoftKey" />
        <TextView
            android:id="@+id/key_pos_1_8"
            style="@style/SoftKey"
            android:layout_marginRight="22.5dp" />
    </LinearLayout>

    <LinearLayout style="@style/KeyboardRow">
        <LinearLayout style="@style/BottomFunctionKeyContainer">
            <ImageView
                android:id="@+id/key_pos_shift"
                style="@style/SoftKey.Image.Shit"
                android:src="@drawable/icon_right_arrow" />
        </LinearLayout>
        <LinearLayout style="@style/BottomSoftKeyContainer">
            <TextView
                android:id="@+id/key_pos_2_0"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_1"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_2"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_3"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_4"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_5"
                style="@style/SoftKey" />
            <TextView
                android:id="@+id/key_pos_2_6"
                style="@style/SoftKey" />
        </LinearLayout>
        <LinearLayout style="@style/BottomFunctionKeyContainer">
            <ImageView
                android:id="@+id/key_pos_del"
                style="@style/SoftKey.Image.Delete"
                android:src="@drawable/icon_delete" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/KeyboardRow">
        <TextView
            android:id="@+id/key_pos_symbol"
            style="@style/SoftKey.Function" />
        <TextView
            android:id="@+id/key_pos_bottom_0"
            style="@style/SoftKey" />
        <TextView
            android:id="@+id/key_pos_change_lang"
            style="@style/SoftKey.Function" />
        <ImageView
            android:id="@+id/key_pos_settings"
            style="@style/SoftKey.Image"
            android:src="@drawable/icon_settings" />
        <ImageView
            android:id="@+id/key_pos_space"
            style="@style/SoftKey.Image.Space"
            android:src="@drawable/icon_space" />
        <TextView
            android:id="@+id/key_pos_bottom_1"
            style="@style/SoftKey" />
        <ImageView
            android:id="@+id/key_pos_enter"
            style="@style/SoftKey.Image"
            android:src="@drawable/icon_enter" />
    </LinearLayout>

</LinearLayout>
