<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="KeyboardArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="KeyboardRow.Header">
        <item name="android:layout_height">@dimen/keyboard_header_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="KeyboardRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/keyboard_row_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/keyboard_background_gradient</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SoftKey">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="SoftKey.Function">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_symbol</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="SoftKey.Space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">160</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_symbol</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
    </style>

    <style name="SoftKey.Image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="SoftKey.Image.Shit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:rotation">270</item>
    </style>

    <style name="SoftKey.Image.Delete">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">35</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_marginLeft">2.5dp</item>
        <item name="android:layout_marginRight">2.5dp</item>
        <item name="android:radius">10dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="BottomFunctionKeyContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">50</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BottomSoftKeyContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">245</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="GestureGuide">
        <item name="android:layout_width">@dimen/gesture_guide_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_height</item>
        <item name="android:padding">@dimen/gesture_guide_padding</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GestureGuide.Cell">
        <item name="android:layout_width">@dimen/gesture_guide_cell_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_cell_height</item>
        <item name="android:layout_margin">@dimen/gesture_guide_cell_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_gesture_guide</item>
        <item name="android:background">@drawable/gesture_guide_background</item>
    </style>

    <style name="GestureGuide.Cell.Empty">
        <item name="android:layout_width">@dimen/gesture_guide_cell_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_cell_height</item>
        <item name="android:layout_margin">@dimen/gesture_guide_cell_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_gesture_guide</item>
        <item name="android:background">@drawable/gesture_guide_background_empty</item>
    </style>

    <style name="GestureGuide.Cell.Transparent">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
