<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="KeyboardArea">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">bottom</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="KeyboardRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/keyboard_row_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/keyboard_background_gradient</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="KeyboardRow.Header">
        <item name="android:layout_height">@dimen/keyboard_header_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SoftKey">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_weight">60</item>
    </style>

    <style name="SoftKey.Num">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SoftKey.Del">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">40</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
    </style>

    <style name="SoftKey.Func">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">40</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
    </style>

    <style name="SoftKey.Sym">
        <item name="android:layout_width">60dp</item>
        <item name="android:textSize">@dimen/text_size_symbol</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
    </style>

    <style name="SoftKey.Func.Text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="SoftKey.Space">
        <item name="android:layout_width">190dp</item>
        <item name="android:layout_weight">190</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
    </style>

    <style name="SoftKey.Ent">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_weight">40</item>
        <item name="android:textSize">@dimen/text_size_symbol</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/softkey_shape_normal</item>
    </style>

    <style name="GestureGuide">
        <item name="android:layout_width">@dimen/gesture_guide_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_height</item>
        <item name="android:padding">@dimen/gesture_guide_padding</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GestureGuide.Cell">
        <item name="android:layout_width">@dimen/gesture_guide_cell_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_cell_height</item>
        <item name="android:layout_margin">@dimen/gesture_guide_cell_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_gesture_guide</item>
        <item name="android:background">@drawable/gesture_guide_background</item>
    </style>

    <style name="GestureGuide.Cell.Transparent">
        <item name="android:layout_width">@dimen/gesture_guide_cell_width</item>
        <item name="android:layout_height">@dimen/gesture_guide_cell_height</item>
        <item name="android:layout_margin">@dimen/gesture_guide_cell_margin</item>
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_gesture_guide</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="GestureGuide.Cell.Gray">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/gesture_guide_gray</item>
    </style>

    <style name="GestureGuideBubble">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/gesture_guide_bubble</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
